{
    // Ref doc: https://code.visualstudio.com/docs/remote/devcontainerjson-reference
    "name": "bodacc",
    "context": "../",
    "dockerFile": "Dockerfile",
    "build": {
        "target": "vscode"
    },
    // Vscode docker options
    "workspaceMount": "source=${localWorkspaceFolder},target=/app,type=bind,consistency=delegated",
    "workspaceFolder": "/app",
    // VSCODE settings
    "settings": {
        "files.watcherExclude": {
            "**/bin/**": true,
            "**/obj/**": true,
        },
        "editor.formatOnSave": true,
    },
    // vscode estensions in container
    "extensions": [
        // "rust-lang.rust",
        "augustocdias.tasks-shell-input",
        "donjayamanne.githistory",
        "ms-dotnettools.csharp",
        "alexcvzz.vscode-sqlite"
    ]
}